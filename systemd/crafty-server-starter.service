[Unit]
Description=Crafty Server Starter — auto-hibernate and wake Minecraft servers
Documentation=https://github.com/your-repo/crafty-server-starter
After=network-online.target
Wants=network-online.target

[Service]
Type=exec
ExecStart=/opt/crafty-server-starter/venv/bin/python -m crafty_server_starter --config /etc/crafty-server-starter/config.yaml
WorkingDirectory=/opt/crafty-server-starter

# ── Credentials ──────────────────────────────────────────────────
EnvironmentFile=-/etc/crafty-server-starter/env

# ── Service identity ─────────────────────────────────────────────
User=crafty-starter
Group=crafty-starter

# ── Sandboxing ───────────────────────────────────────────────────
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
PrivateDevices=yes
ProtectKernelTunables=yes
ProtectKernelModules=yes
ProtectControlGroups=yes
RestrictRealtime=yes
RestrictSUIDSGID=yes
MemoryDenyWriteExecute=yes
LockPersonality=yes
ReadWritePaths=/var/log/crafty-server-starter

# ── Capabilities (only needed if binding to port < 1024) ───────
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE

# ── Restart policy ──────────────────────────────────────────────
Restart=on-failure
RestartSec=10

# ── Resource limits ─────────────────────────────────────────────
LimitNOFILE=4096

[Install]
WantedBy=multi-user.target
